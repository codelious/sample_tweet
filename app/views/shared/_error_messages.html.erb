<% if object.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(object.errors.count, "error") %> 
        prohiben que este <%= object.class.to_s.underscore.humanize.downcase %> se guarde:</h2>
    <p>Hay problemas con los siguientes campos:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>